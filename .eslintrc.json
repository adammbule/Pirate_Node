{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,  // Use ES2021
    "sourceType": "module"  // Enable module support
  },
  "rules": {
    "no-console": "off"  // Allow console statements in development
  }
}
